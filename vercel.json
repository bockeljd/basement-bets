{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/((?!api/|assets/|favicon.ico).*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/jobs/policy_refresh",
            "schedule": "0 8 * * *"
        }
    ]
}