{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/client/dist/assets/$1"
        },
        {
            "source": "/((?!api/|assets/|favicon.ico).*)",
            "destination": "/client/dist/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/jobs/policy_refresh",
            "schedule": "0 8 * * *"
        },
        {
            "path": "/api/jobs/ingest_torvik",
            "schedule": "0 6 * * *"
        }
    ],
    "buildCommand": "cd client && npm install && npm run build"
}